@using OusePersonalWeb.Componments
@inject IDialogService Dialog
<MudPaper Outlined Style="min-height:400px" Class="d-flex flex-column pa-6">
    <MudStepper Vertical ShowResetButton NonLinear>
        <ChildContent>
            <MudStep Title="Dotnet" SecondaryText="构建强大的应用">
                        Asp.Net Core Web Api<br />
                        Blazor(MudBlazor)<br />
                        Avalonia,WPF <br />
            </MudStep>
            <MudStep Title="Unity" SecondaryText="强大的游戏开发引擎">
                10款游戏的开发经验<br />
                Photon<br />
                游戏的常用技术<br />
            </MudStep>
            <MudStep Title="嵌入式" SecondaryText="驱动智能硬件的核心">
                platformIO,nanoFramework<br />
                8051,stm32,esp32<br />
                等等<br />
            </MudStep>
            <MudStep Title="其他" SecondaryText="探索技术的无限可能">
                mysql<br />
                linux<br />
                angular<br />
                等等<br />
            </MudStep>
        </ChildContent>
        <CompletedContent>
            谢谢您的查看!
        </CompletedContent>
    </MudStepper>
    <MudButton Variant="Variant.Outlined" Class="ml-auto buttonhover" OnClick="ShowDialog">查看饼图</MudButton>
</MudPaper>
@code
{
    public async Task ShowDialog()
    {
        var dialog =await Dialog.ShowAsync<ShowPiChart>("展示饼图",Settings.DialogOptions);
    }
}