<MudTimelineItem>
    <ItemContent>
            <MudCard>
                <MudCardHeader>
                    <MudText Typo="Typo.h6" Style="font-weight:500" Color="@first">
                        @Title
                    </MudText>
                </MudCardHeader>
                <MudCardContent>
                    @Content
                </MudCardContent>
            </MudCard>
    </ItemContent>
    <ItemOpposite>
            <MudText Typo="Typo.h5" Color="@second" Style="font-weight:700">
                @Time
            </MudText>
    </ItemOpposite>
</MudTimelineItem>
@code
{

    [Parameter]
    public string ?Title{ get; set; }
    [Parameter]
    public string? Content{ get; set; }
    [Parameter]
    public string? Time { get; set; }
    private MudBlazor.Color first, second;
    protected override void OnInitialized()
    {
        first = Untilies.GetRandomColor();
        second = Untilies.GetRandomColor();
    }
}